{
  "name": "memovo-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run dev:migrate:deploy && npm run prisma:seed && node dist/src/server.js",
    "dev": "nodemon src/server.ts",
    "dev:migration-generate": "npx prisma migrate dev",
    "test:migration-generate": "npx dotenv -e .env.test npx prisma migrate dev --name memovo postgres-init",
    "prisma:seed": "npx prisma db seed",
    "dev:migrate:deploy": "prisma migrate deploy",
    "test:migrate:deploy": "npx dotenv -e .env.test prisma migrate deploy && npm run prisma:seed",
    "test": "npm run test:migrate:deploy && npx dotenv -e .env.test npx jest -- --runInBand",
    "test:coverage": "npx dotenv -e .env.test npx jest -- --runInBand --coverage",
    "test:prisma:seed": "npx dotenv -e .env.test npx prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.10",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^7.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
